<div class="container signup">
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<h3>Sign Up and Create a Profile</h3>
    <h4></h4>
    <%= render 'shared/users_errors' %>
    <%= form_for(@user) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control', value: @email %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Sign me up!", class: "btn btn-primary" %>

    <% end %>
    <p>Already have an account? <%= link_to "Log in now!", login_path %></p>
  </div>
</div>
</div>