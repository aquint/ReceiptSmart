<%= form_for(@receipt) do |f| %>
  <div class="form-group">
    <%= f.text_field :store, placeholder: "Store", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :credit_card, placeholder: "Credit card type e.g. Visa", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.number_field :subtotal, min: 0, step: 0.01, placeholder: "Subtotal", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.number_field :total, min: 0, step: 0.01, placeholder: "Total", class: "form-control" %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>